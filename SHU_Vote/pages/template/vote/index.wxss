/* SHU_Vote/pages/template/vote/index.wxss */
.vote_whole{
  width: 100%;
  height: 250rpx;
 padding-bottom: 30rpx;
  /* display: flex;
  justify-content:center;  */
}

.vote_photoouter{
  width: 50%;
    height: 250rpx;
  float: left;
  display: flex;
  flex-direction: row-reverse;

}

.vote_photoouter > .vote_photo{
  margin-right: 40rpx;
}

.vote_photoouter_odd{
  width: 50%;
    height: 250rpx;
  float: right;
  display: flex;
  /* flex-direction: row-reverse; */
}
.vote_photoouter_odd > .vote_photo{
  margin-left: 40rpx;
}
.vote_msgouter{
  width:50%;
    height: 250rpx;
  float: right;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.vote_msgouter > .vote_msg{
  align-items: flex-end;
  margin-right: 40rpx;
}
.vote_msgouter_odd{
  width:50%;
    height: 250rpx;
  float: left;
    display: flex;
  flex-direction: column;
  justify-content: center;
}
.vote_photo{
width:200rpx;
height:200rpx;
/* margin-right: 70rpx; */
border: 10rpx solid #626fbb;
line-height: 200rpx;
border-radius: 50%;
overflow: hidden;
float: right;
align-self: center;
}

.vote_msg{
display: flex;
margin-left: 40rpx;
flex-direction: column;
}

.vote_do{
  background-color: #506bba;
  width: 140rpx;
  height: 46rpx;
  text-align: center;
 
  border-radius: 30rpx;
  margin-top: 10rpx;
}

